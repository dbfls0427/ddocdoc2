<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


		<bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
		<bean id="customLoginSuccess" class="org.ddocdoc.security.CustomLoginSuccessHandler"/>
		
	<security:http>
		
		<security:intercept-url pattern="/customer/hosSearch" access="permitAll"/>
		<security:intercept-url pattern="/customer/hospitalResForm" access="permitAll"/>
		<security:intercept-url pattern="/customer/hospitalRes" access="permitAll"/>
		<security:intercept-url pattern="/customer/hospitalResList" access="permitAll"/>
	
<!-- 		<security:intercept-url pattern="/customer/hosSearch" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/customer/loginSuccess" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/customer/hospitalResForm" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/customer/hospitalRes" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/customer/hospitalResList" access="hasRole('ROLE_MEMBER')"/> -->
		

		
		<!-- Parmacy Reservation -->
		<security:intercept-url pattern="/customer/pharSearch" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/customer/pharResForm" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/customer/pharResDetail" access="hasRole('ROLE_MEMBER')"/>
		
		<security:intercept-url pattern="/customer/pharSearch" access="hasRole('ROLE_ADMIN')"/>
		<security:intercept-url pattern="/customer/pharResForm" access="hasRole('ROLE_ADMIN')"/>
		<security:intercept-url pattern="/customer/pharResDetail" access="hasRole('ROLE_ADMIN')"/>
		
		
		<!-- child -->
		<security:intercept-url pattern="/child/childList" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/child/childDetail" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/child/childUpdate" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/child/childInsert" access="hasRole('ROLE_MEMBER')"/>
		
		<security:intercept-url pattern="/child/childList" access="hasRole('ROLE_ADMIN')"/>
		<security:intercept-url pattern="/child/childDetail" access="hasRole('ROLE_ADMIN')"/>
		<security:intercept-url pattern="/child/childUpdate" access="hasRole('ROLE_ADMIN')"/>
		<security:intercept-url pattern="/child/childInsert" access="hasRole('ROLE_ADMIN')"/>
		
		<!-- child height -->
		<security:intercept-url pattern="/height/heightList" access="hasRole('ROLE_MEMBER')"/>
		
		<security:intercept-url pattern="/height/heightList" access="hasRole('ROLE_ADMIN')"/>
		
		<!-- child inject -->
		<security:intercept-url pattern="/inject/injectList" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/inject/injectInsert" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/inject/injectDetail" access="hasRole('ROLE_MEMBER')"/>
		
		<security:intercept-url pattern="/inject/injectList" access="hasRole('ROLE_ADMIN')"/>
		<security:intercept-url pattern="/inject/injectInsert" access="hasRole('ROLE_ADMIN')"/>
		<security:intercept-url pattern="/inject/injectDetail" access="hasRole('ROLE_ADMIN')"/>
		
		<!-- child checkup -->
		<security:intercept-url pattern="/checkup/checkupList" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/checkup/checkupInsert" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/checkup/checkupDetail" access="hasRole('ROLE_MEMBER')"/>
		
		<security:intercept-url pattern="/checkup/checkupList" access="hasRole('ROLE_ADMIN')"/>
		<security:intercept-url pattern="/checkup/checkupInsert" access="hasRole('ROLE_ADMIN')"/>
		<security:intercept-url pattern="/checkup/checkupDetail" access="hasRole('ROLE_ADMIN')"/>
		
		
		<security:form-login login-page="/customer/loginForm" authentication-success-handler-ref="customLoginSuccess"/>
		<security:logout logout-url="/customer/logout" invalidate-session="true"/>
		<security:access-denied-handler error-page="/"/> <!-- 에러발생시 -->
	</security:http>


	<security:authentication-manager>
		<security:authentication-provider>
			
			<security:jdbc-user-service data-source-ref="dataSource" users-by-username-query="select cus_id, cus_pw, enabled from dd_customer where cus_id = ?" authorities-by-username-query="select cus_id, auth from dd_customer_auth where cus_num=(select cus_num from dd_customer where cus_id = ?)"/>
			<security:password-encoder ref="bcryptPasswordEncoder"/>
			
			
		</security:authentication-provider>
		
	</security:authentication-manager>
</beans>
