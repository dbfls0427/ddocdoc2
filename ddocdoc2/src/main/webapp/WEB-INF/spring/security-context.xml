<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


		<bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
		<bean id="customLoginSuccess" class="org.ddocdoc.security.CustomLoginSuccessHandler"/>
		
	<security:http>
	
		<security:intercept-url pattern="/customer/hosSearch" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/customer/loginSuccess" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/customer/hospitalResForm" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/customer/hospitalRes" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/customer/hospitalResList" access="hasRole('ROLE_MEMBER')"/>
		
		
		
		<security:intercept-url pattern="/child/childList" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/child/childDetail" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/child/childUpdate" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/child/childInsert" access="hasRole('ROLE_MEMBER')"/>
		
		
		
		<security:form-login login-page="/customer/loginForm" authentication-success-handler-ref="customLoginSuccess"/>
		
		<security:access-denied-handler error-page="/"/> <!-- 에러발생시 -->
	</security:http>


	<security:authentication-manager>
		<security:authentication-provider>
			
			<security:jdbc-user-service data-source-ref="dataSource" users-by-username-query="select cus_id, cus_pw, enabled from dd_customer where cus_id = ?" authorities-by-username-query="select cus_id, auth from dd_customer_auth where cus_num=(select cus_num from dd_customer where cus_id = ?)"/>
			<security:password-encoder ref="bcryptPasswordEncoder"/>
			
			
		</security:authentication-provider>
		
	</security:authentication-manager>
</beans>
